---
interface Props {
  title: string;
  summary: string;
  tech: string[];
  slug: string;
  field: string[];
  cover?: string;
  index?: number;
}

const { title, summary, tech, slug, field, cover, index = 0 } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');

// Derive serviceType from field for color theme
function getServiceType(fields: string[]): string {
  for (const f of fields) {
    if (f.includes('APP')) return 'app-development';
    if (f === 'AI' || f === 'Data') return 'data-ai';
    if (f === 'DevOps' || f === 'IoT') return 'automation';
    if (f === '특허') return 'consulting';
  }
  if (fields.some((f) => f === 'B/E' || f === 'F/E' || f === 'DB')) return 'web-development';
  return 'web-development';
}

const serviceType = getServiceType(field);

const serviceLabels: Record<string, string> = {
  'web-development': 'Web',
  'app-development': 'App',
  'data-ai': 'Data/AI',
  automation: 'DevOps',
  consulting: 'Patent',
};

const serviceThemes: Record<string, { bg: string; gradientTo: string; text: string; accent: string }> = {
  'web-development': { bg: '#2a3a6b', gradientTo: '#1a2040', text: '#c8d4f0', accent: '#7b8fd4' },
  'app-development': { bg: '#1e4d3a', gradientTo: '#0f2a1e', text: '#c8e8d4', accent: '#5cb88a' },
  'data-ai': { bg: '#5c2e2e', gradientTo: '#351a1a', text: '#f0d4cc', accent: '#e0806e' },
  automation: { bg: '#2a3f5c', gradientTo: '#15202e', text: '#c8dcf0', accent: '#7ba8d4' },
  consulting: { bg: '#5c4a2a', gradientTo: '#2e2515', text: '#f0e4cc', accent: '#d4a85c' },
};

const theme = serviceThemes[serviceType] || serviceThemes['web-development'];
const paddedIndex = String(index).padStart(2, '0');
const label = serviceLabels[serviceType] || 'Dev';
const hasCover = !!cover;
---

<a href={`${base}projects/${slug}/`} class="work-card">
  {hasCover ? (
    <div class="thumb thumb-cover">
      <img src={`${base}${cover}`} alt={title} loading="lazy" />
      <div class="thumb-overlay">
        <span class="thumb-cta" style={`color: #fff;`}>View &rarr;</span>
      </div>
    </div>
  ) : (
    <div class="thumb" style={`background: linear-gradient(135deg, ${theme.bg} 0%, ${theme.gradientTo} 100%);`}>
      <div class="thumb-deco">
        <svg width="100%" height="100%" viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice">
          <circle cx="480" cy="100" r="140" stroke={theme.accent} stroke-width="0.8" opacity="0.25" />
          <circle cx="480" cy="100" r="80" stroke={theme.accent} stroke-width="0.6" opacity="0.18" />
          <circle cx="480" cy="100" r="30" fill={theme.accent} opacity="0.08" />
          <line x1="0" y1="340" x2="600" y2="340" stroke={theme.accent} stroke-width="0.4" opacity="0.12" />
          <line x1="0" y1="360" x2="400" y2="360" stroke={theme.accent} stroke-width="0.4" opacity="0.08" />
          <rect x="60" y="280" width="100" height="2" fill={theme.accent} opacity="0.15" rx="1" />
          <rect x="60" y="296" width="60" height="2" fill={theme.accent} opacity="0.1" rx="1" />
        </svg>
      </div>
      <div class="thumb-content">
        <div class="thumb-top">
          <span class="thumb-label" style={`color: ${theme.text};`}>{label}</span>
        </div>
        <div class="thumb-bottom">
          <span class="thumb-num" style={`color: ${theme.text};`}>{paddedIndex}</span>
          <span class="thumb-cta" style={`color: ${theme.accent};`}>View &rarr;</span>
        </div>
      </div>
    </div>
  )}
  <div class="card-body">
    <h3>{title}</h3>
    <p class="desc">{summary}</p>
    <div class="tags">
      {tech.slice(0, 4).map((t) => (
        <span class="tag">{t}</span>
      ))}
    </div>
  </div>
</a>

<style>
  .work-card {
    display: block;
    cursor: pointer;
  }

  .thumb {
    width: 100%;
    aspect-ratio: 16 / 10;
    border-radius: 6px;
    overflow: hidden;
    position: relative;
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .work-card:hover .thumb {
    transform: translateY(-4px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
  }

  /* Cover image thumbnail */
  .thumb-cover {
    background: var(--border);
  }

  .thumb-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform var(--transition-normal);
  }

  .work-card:hover .thumb-cover img {
    transform: scale(1.03);
  }

  .thumb-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0);
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    padding: 20px;
    transition: background var(--transition-normal);
  }

  .work-card:hover .thumb-overlay {
    background: rgba(0, 0, 0, 0.25);
  }

  .thumb-overlay .thumb-cta {
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.04em;
    opacity: 0;
    transform: translateX(-8px);
    transition: opacity var(--transition-normal), transform var(--transition-normal);
  }

  .work-card:hover .thumb-overlay .thumb-cta {
    opacity: 1;
    transform: translateX(0);
  }

  /* SVG gradient thumbnail */
  .thumb-deco {
    position: absolute;
    inset: 0;
    opacity: 0.9;
    transition: opacity var(--transition-normal);
  }

  .work-card:hover .thumb-deco {
    opacity: 1;
  }

  .thumb-content {
    position: absolute;
    inset: 0;
    padding: 28px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .thumb-top {
    display: flex;
    justify-content: flex-start;
  }

  .thumb-label {
    font-size: 11px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-weight: 500;
    opacity: 0.6;
  }

  .thumb-bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .thumb-num {
    font-size: 48px;
    font-weight: 800;
    letter-spacing: -0.04em;
    line-height: 1;
    opacity: 0.25;
  }

  .thumb-content .thumb-cta {
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.04em;
    opacity: 0;
    transform: translateX(-8px);
    transition: opacity var(--transition-normal), transform var(--transition-normal);
  }

  .work-card:hover .thumb-content .thumb-cta {
    opacity: 0.8;
    transform: translateX(0);
  }

  .card-body {
    padding-top: 20px;
  }

  h3 {
    font-size: 19px;
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.3;
    transition: color var(--transition-fast);
  }

  .work-card:hover h3 {
    color: var(--text-secondary);
  }

  .desc {
    margin-top: 8px;
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tags {
    margin-top: 14px;
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 11px;
    letter-spacing: 0.03em;
    padding: 4px 10px;
    border: 1px solid var(--border);
    border-radius: 100px;
    color: var(--text-tertiary);
    transition: all var(--transition-fast);
  }

  .work-card:hover .tag {
    border-color: var(--text-secondary);
    color: var(--text-secondary);
  }
</style>
