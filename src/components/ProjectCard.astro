---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  summary: string;
  tech: string[];
  slug: string;
  field: string[];
  cover?: ImageMetadata;
  index?: number;
}

const { title, summary, tech, slug, field, cover, index = 0 } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');

// Derive serviceType from field for color theme
function getServiceType(fields: string[]): string {
  for (const f of fields) {
    if (f.includes('APP')) return 'app-development';
    if (f === 'AI' || f === 'Data') return 'data-ai';
    if (f === 'DevOps' || f === 'IoT') return 'automation';
    if (f === '특허') return 'consulting';
  }
  if (fields.some((f) => f === 'B/E' || f === 'F/E' || f === 'DB')) return 'web-development';
  return 'web-development';
}

const serviceType = getServiceType(field);

const serviceLabels: Record<string, string> = {
  'web-development': 'Web',
  'app-development': 'App',
  'data-ai': 'Data/AI',
  automation: 'DevOps',
  consulting: 'Patent',
};

const serviceThemes: Record<string, { bg: string; gradientTo: string; text: string; accent: string }> = {
  'web-development': { bg: '#2a3a6b', gradientTo: '#1a2040', text: '#c8d4f0', accent: '#7b8fd4' },
  'app-development': { bg: '#1e4d3a', gradientTo: '#0f2a1e', text: '#c8e8d4', accent: '#5cb88a' },
  'data-ai': { bg: '#5c2e2e', gradientTo: '#351a1a', text: '#f0d4cc', accent: '#e0806e' },
  automation: { bg: '#2a3f5c', gradientTo: '#15202e', text: '#c8dcf0', accent: '#7ba8d4' },
  consulting: { bg: '#5c4a2a', gradientTo: '#2e2515', text: '#f0e4cc', accent: '#d4a85c' },
};

const theme = serviceThemes[serviceType] || serviceThemes['web-development'];
const label = serviceLabels[serviceType] || 'Dev';
const hasCover = !!cover;

// Service-specific SVG patterns
function getPatternSvg(type: string, accent: string): string {
  switch (type) {
    case 'web-development':
      return `
        <line x1="120" y1="0" x2="120" y2="400" stroke="${accent}" stroke-width="0.5" opacity="0.12"/>
        <line x1="240" y1="0" x2="240" y2="400" stroke="${accent}" stroke-width="0.5" opacity="0.12"/>
        <line x1="360" y1="0" x2="360" y2="400" stroke="${accent}" stroke-width="0.5" opacity="0.12"/>
        <line x1="480" y1="0" x2="480" y2="400" stroke="${accent}" stroke-width="0.5" opacity="0.12"/>
        <line x1="0" y1="100" x2="600" y2="100" stroke="${accent}" stroke-width="0.5" opacity="0.12"/>
        <line x1="0" y1="200" x2="600" y2="200" stroke="${accent}" stroke-width="0.5" opacity="0.12"/>
        <line x1="0" y1="300" x2="600" y2="300" stroke="${accent}" stroke-width="0.5" opacity="0.12"/>
        <path d="M36,36 L36,56 M36,36 L56,36" stroke="${accent}" stroke-width="1.5" opacity="0.35" fill="none"/>
        <path d="M564,36 L564,56 M564,36 L544,36" stroke="${accent}" stroke-width="1.5" opacity="0.35" fill="none"/>
        <path d="M36,364 L36,344 M36,364 L56,364" stroke="${accent}" stroke-width="1.5" opacity="0.35" fill="none"/>
        <path d="M564,364 L564,344 M564,364 L544,364" stroke="${accent}" stroke-width="1.5" opacity="0.35" fill="none"/>
      `;
    case 'app-development':
      return `
        <rect x="200" y="40" width="200" height="320" rx="24" stroke="${accent}" stroke-width="1" opacity="0.2" fill="none"/>
        <rect x="216" y="56" width="168" height="288" rx="12" stroke="${accent}" stroke-width="0.5" opacity="0.1" fill="none"/>
        <rect x="272" y="52" width="56" height="4" rx="2" fill="${accent}" opacity="0.15"/>
        <circle cx="300" cy="340" r="8" stroke="${accent}" stroke-width="0.8" opacity="0.18" fill="none"/>
        <rect x="240" y="100" width="120" height="8" rx="2" fill="${accent}" opacity="0.06"/>
        <rect x="240" y="120" width="80" height="8" rx="2" fill="${accent}" opacity="0.04"/>
        <rect x="240" y="160" width="120" height="60" rx="4" stroke="${accent}" stroke-width="0.5" opacity="0.08" fill="none"/>
      `;
    case 'data-ai':
      return `
        <circle cx="120" cy="100" r="4" fill="${accent}" opacity="0.3"/>
        <circle cx="300" cy="60" r="5" fill="${accent}" opacity="0.25"/>
        <circle cx="480" cy="120" r="4" fill="${accent}" opacity="0.3"/>
        <circle cx="180" cy="240" r="6" fill="${accent}" opacity="0.2"/>
        <circle cx="360" cy="200" r="4" fill="${accent}" opacity="0.3"/>
        <circle cx="500" cy="280" r="5" fill="${accent}" opacity="0.25"/>
        <circle cx="80" cy="320" r="3" fill="${accent}" opacity="0.2"/>
        <circle cx="420" cy="340" r="3" fill="${accent}" opacity="0.2"/>
        <line x1="120" y1="100" x2="300" y2="60" stroke="${accent}" stroke-width="0.6" opacity="0.15"/>
        <line x1="300" y1="60" x2="480" y2="120" stroke="${accent}" stroke-width="0.6" opacity="0.15"/>
        <line x1="120" y1="100" x2="180" y2="240" stroke="${accent}" stroke-width="0.6" opacity="0.15"/>
        <line x1="180" y1="240" x2="360" y2="200" stroke="${accent}" stroke-width="0.6" opacity="0.15"/>
        <line x1="360" y1="200" x2="480" y2="120" stroke="${accent}" stroke-width="0.6" opacity="0.12"/>
        <line x1="360" y1="200" x2="500" y2="280" stroke="${accent}" stroke-width="0.6" opacity="0.15"/>
        <line x1="80" y1="320" x2="180" y2="240" stroke="${accent}" stroke-width="0.6" opacity="0.12"/>
        <line x1="500" y1="280" x2="420" y2="340" stroke="${accent}" stroke-width="0.6" opacity="0.12"/>
      `;
    case 'automation':
      return `
        <path d="M0,80 C100,80 150,120 250,120 S400,80 500,100 L600,100" stroke="${accent}" stroke-width="0.8" opacity="0.18" fill="none"/>
        <path d="M0,160 C100,160 150,190 250,190 S400,160 500,180 L600,180" stroke="${accent}" stroke-width="0.8" opacity="0.14" fill="none"/>
        <path d="M0,240 C100,240 150,270 250,270 S400,240 500,260 L600,260" stroke="${accent}" stroke-width="0.8" opacity="0.18" fill="none"/>
        <path d="M0,320 C100,320 150,340 250,340 S400,320 500,330 L600,330" stroke="${accent}" stroke-width="0.8" opacity="0.14" fill="none"/>
        <circle cx="250" cy="120" r="3" fill="${accent}" opacity="0.3"/>
