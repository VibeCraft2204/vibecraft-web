      `;
    case 'consulting':
      return `
        <line x1="0" y1="0" x2="400" y2="400" stroke="${accent}" stroke-width="0.5" opacity="0.1"/>
        <line x1="100" y1="0" x2="500" y2="400" stroke="${accent}" stroke-width="0.5" opacity="0.08"/>
        <line x1="200" y1="0" x2="600" y2="400" stroke="${accent}" stroke-width="0.5" opacity="0.1"/>
        <line x1="300" y1="0" x2="600" y2="300" stroke="${accent}" stroke-width="0.5" opacity="0.08"/>
        <line x1="400" y1="0" x2="600" y2="200" stroke="${accent}" stroke-width="0.5" opacity="0.06"/>
        <line x1="0" y1="100" x2="300" y2="400" stroke="${accent}" stroke-width="0.5" opacity="0.08"/>
        <line x1="0" y1="200" x2="200" y2="400" stroke="${accent}" stroke-width="0.5" opacity="0.1"/>
        <line x1="200" y1="0" x2="0" y2="200" stroke="${accent}" stroke-width="0.3" opacity="0.05"/>
        <line x1="400" y1="0" x2="0" y2="400" stroke="${accent}" stroke-width="0.3" opacity="0.05"/>
        <line x1="600" y1="0" x2="200" y2="400" stroke="${accent}" stroke-width="0.3" opacity="0.05"/>
        <line x1="600" y1="100" x2="300" y2="400" stroke="${accent}" stroke-width="0.3" opacity="0.05"/>
        <line x1="600" y1="200" x2="400" y2="400" stroke="${accent}" stroke-width="0.3" opacity="0.05"/>
      `;
    default:
      return `
        <circle cx="480" cy="100" r="140" stroke="${accent}" stroke-width="0.8" opacity="0.25"/>
        <circle cx="480" cy="100" r="80" stroke="${accent}" stroke-width="0.6" opacity="0.18"/>
      `;
  }
}

const patternSvg = getPatternSvg(serviceType, theme.accent);
---

<a href={`${base}projects/${slug}/`} class="work-card">
  {hasCover && cover ? (
    <div class="thumb thumb-cover">
      <Image src={cover} alt={title} width={600} format="webp" quality={80} loading="lazy" />
      <div class="thumb-overlay">
        <span class="thumb-cta" style={`color: #fff;`}>View &rarr;</span>
      </div>
    </div>
  ) : (
    <div class="thumb" style={`background: linear-gradient(135deg, ${theme.bg} 0%, ${theme.gradientTo} 100%);`}>
      <div class="thumb-deco">
        <svg width="100%" height="100%" viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice">
          <Fragment set:html={patternSvg} />
        </svg>
      </div>
      <div class="thumb-content">
        <div class="thumb-top">
          <span class="thumb-label" style={`color: ${theme.text};`}>{label}</span>
        </div>
        <div class="thumb-bottom">
          <span class="thumb-title" style={`color: ${theme.text};`}>{title}</span>
          <span class="thumb-cta" style={`color: ${theme.accent};`}>View &rarr;</span>
        </div>
      </div>
    </div>
  )}
  <div class="card-body">
    <h3>{title}</h3>
    <p class="desc">{summary}</p>
    <div class="tags">
      {tech.slice(0, 4).map((t) => (
        <span class="tag">{t}</span>
      ))}
    </div>
  </div>
</a>

<style>
  .work-card {
    display: block;
    cursor: pointer;
  }

  .thumb {
    width: 100%;
    aspect-ratio: 16 / 10;
    border-radius: 6px;
    overflow: hidden;
    position: relative;
    transition: transform var(--transition-normal);
  }

  .work-card:hover .thumb {
    transform: scale(1.02);
  }

  /* Cover image thumbnail */
  .thumb-cover {
    background: var(--border);
  }

  .thumb-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform var(--transition-normal);
  }

  .work-card:hover .thumb-cover {
    transform: none;
  }

  .work-card:hover .thumb-cover img {
    transform: scale(1.03);
  }

  .thumb-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0);
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    padding: 20px;
    transition: background var(--transition-normal);
  }

  .work-card:hover .thumb-overlay {
    background: rgba(0, 0, 0, 0.25);
  }

  .thumb-overlay .thumb-cta {
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.04em;
    opacity: 0;
    transform: translateX(-8px);
    transition: opacity var(--transition-normal), transform var(--transition-normal);
  }

  .work-card:hover .thumb-overlay .thumb-cta {
    opacity: 1;
    transform: translateX(0);
  }

  /* SVG gradient thumbnail */
  .thumb-deco {
    position: absolute;
    inset: 0;
    opacity: 0.9;
    transition: opacity var(--transition-normal);
  }

  .work-card:hover .thumb-deco {
    opacity: 1;
  }

  .thumb-content {
    position: absolute;
    inset: 0;
    padding: 28px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .thumb-top {
    display: flex;
    justify-content: flex-start;
  }

  .thumb-label {
    font-size: 11px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-weight: 500;
    opacity: 0.6;
  }

  .thumb-bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .thumb-title {
    font-size: 18px;
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.3;
    max-width: 70%;
    opacity: 0.9;
  }

  .thumb-content .thumb-cta {
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.04em;
    opacity: 0;
    transform: translateX(-8px);
    transition: opacity var(--transition-normal), transform var(--transition-normal);
  }

  .work-card:hover .thumb-content .thumb-cta {
    opacity: 0.8;
    transform: translateX(0);
  }

  .card-body {
    padding-top: 20px;
  }

  h3 {
    font-size: 19px;
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.3;
    transition: color var(--transition-fast);
  }

  .work-card:hover h3 {
    color: var(--text-secondary);
  }

  .desc {
    margin-top: 8px;
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tags {
    margin-top: 14px;
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 11px;
    letter-spacing: 0.03em;
    padding: 4px 10px;
    border: 1px solid var(--border);
    border-radius: 100px;
    color: var(--text-tertiary);
    transition: all var(--transition-fast);
  }

  .work-card:hover .tag {
    border-color: var(--text-secondary);
    color: var(--text-secondary);
  }
</style>
