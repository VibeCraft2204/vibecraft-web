---
interface Props {
  number: string;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<div class="process-step">
  <div class="step-number">{number}</div>
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .process-step {
    background: var(--dark-bg);
    padding: 40px 32px;
    transition: background var(--transition-normal);
    display: flex;
    flex-direction: column;
    min-height: 200px;
  }

  .process-step:hover {
    background: var(--dark-bg-alt);
  }

  .step-number {
    font-size: 36px;
    font-weight: 700;
    letter-spacing: -0.03em;
    color: var(--dark-text-secondary);
    opacity: 0.3;
    margin-bottom: 24px;
    line-height: 1;
  }

  h3 {
    font-size: 18px;
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.3;
    color: var(--dark-text);
    margin-bottom: 12px;
  }

  p {
    font-size: 14px;
    color: var(--dark-text-secondary);
    line-height: 1.7;
    margin-top: auto;
  }
</style>
