---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// h2, h3만 표시. heading 2개 미만이면 미표시
const filtered = headings.filter((h) => h.depth === 2 || h.depth === 3);
---

{filtered.length >= 2 && (
  <nav class="toc" aria-label="목차">
    <h3 class="toc-heading">목차</h3>
    <ul class="toc-list">
      {filtered.map((h) => (
        <li class={h.depth === 3 ? 'toc-item toc-sub' : 'toc-item'}>
          <a href={`#${h.slug}`}>{h.text}</a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc {
    margin-bottom: 40px;
    padding: 24px;
    background: var(--card-bg);
    border-radius: 4px;
    max-width: 720px;
  }

  .toc-heading {
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-tertiary);
    margin-bottom: 12px;
  }

  .toc-list {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .toc-item a {
    font-size: 14px;
    color: var(--text-secondary);
    transition: color var(--transition-fast);
    line-height: 1.6;
  }

  .toc-item a:hover {
    color: var(--text);
  }

  .toc-sub {
    padding-left: 16px;
  }

  .toc-sub a {
    font-size: 13px;
  }
</style>
